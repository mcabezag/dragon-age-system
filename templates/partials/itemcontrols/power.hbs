{{!-- Power Details --}}
<li class="item-box drag-to-macro item-card flexrow feature-controls {{colorset}}" draggable="true" data-item-id="{{item._id}}" data-roll-type="{{config.ROLL_TYPE.POWER}}">
    <div class="main-data flexrow">
        <img class="item-image" src="{{item.img}}" title="{{item.name}}" width="24" height="24"/>
        <a class="item-show item-name">{{item.name}}</a>
    </div>
    <div class="controls flexrow">
        {{#if item.system.hasRoll}}
        <a class="item-control roll-item" title="{{localize "age-system.settings.attack"}}"><i class="fas fa-dice"></i></a>
        {{/if}}
        {{#if item.system.causeDamage}}                            
        <a class="item-control roll-damage" title="{{localize "age-system.rollDamage"}}"><i class="fas fa-fist-raised"></i></a>
        {{/if}}
        {{#if item.system.causeHealing}}
        <a class="item-control roll-damage" title="{{localize "age-system.rollHealing"}}"><i class="fa fa-heartbeat"></i></a>
        {{/if}}
        <div class="flexcol stacked-icons">
            <a class="item-control item-equip favorite{{#unless item.system.favorite}} not-equiped{{/unless}}" title="{{localize "age-system.quickAccess"}}"><i class="fas fa-star"></i></a>
            <a class="item-control item-equip{{#unless item.system.activate}} not-equiped{{/unless}}" title="{{localize "age-system.settings.equip"}}"><i class="fas fa-shield-alt"></i></a>
        </div>
    </div>
</li>