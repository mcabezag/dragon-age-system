{{!-- Social Tab --}}
<section class="social-section">

    {{!-- Relationship --}}
    <ul class="resource item-group">
        <li class="title colorset-first-tier">
            {{localize "age-system.relationshipContainer"}}
        </li>
        {{#each data.relationship as |item|}}
        {{> "systems/dragon-age-system/templates/partials/itemcontrols/relationship.hbs" item=this config=../data.config colorset='colorset-third-tier'}}
        {{#unless @last}}
        <hr>
        {{/unless}}
        {{/each}}
    </ul>

    <div>
        {{!-- Honorifics --}}
        <ul class="resource item-group">
            <li class="title colorset-first-tier">
                {{localize "age-system.honorificsContainer"}}
            </li>
            {{#each data.honorifics as |item|}}
            {{> "systems/dragon-age-system/templates/partials/itemcontrols/honorifics.hbs" item=this config=../data.config colorset='colorset-third-tier'}}
            {{#unless @last}}
            <hr>
            {{/unless}}
            {{/each}}
        </ul>

        {{!-- Membership --}}
        <ul class="resource item-group">
            <li class="title colorset-first-tier">
                {{localize "age-system.membershipContainer"}}
            </li>
            {{#each data.membership as |item|}}
            {{> "systems/dragon-age-system/templates/partials/itemcontrols/membership.hbs" item=this config=../data.config colorset='colorset-third-tier'}}
            {{#unless @last}}
            <hr>
            {{/unless}}
            {{/each}}
        </ul>
    </div>

</section>