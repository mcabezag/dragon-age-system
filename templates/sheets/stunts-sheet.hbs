<form class="{{cssClass}} age-system item stunts flexrow no-flexwrap" autocomplete="off">
    <aside class="sidebar metal-background colorset-first-tier">
        <img class="document-picture" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
        <ul class="item-summary">
            {{!-- Stunt Cost --}}
            <li>
                <label>{{localize "age-system.settings.stuntPoints"}}</label>
                {{#if (eq system.costType "variable")}}
                <div class="flexrow">
                    <input type="number" value="{{system.stuntPoints}}" name="system.stuntPoints" data-dtype="Number" placeholder="{{localize "age-system.settings.stuntPointsIndex"}}"/>
                    /
                    <input type="number" value="{{system.stuntPointsMax}}" name="system.stuntPointsMax" data-dtype="Number" placeholder="{{localize "age-system.settings.stuntPointsIndex"}}"/>
                </div>
                {{else}}
                <input name="system.stuntPoints" type="number" value="{{system.stuntPoints}}" placeholder="{{localize "age-system.settings.stuntPointsIndex"}}"/>
                {{/if}}
            </li>

            {{!-- Cost Type --}}
            <li>
                <label>{{localize "age-system.item.cost"}}</label>
                <select name="system.costType">
                {{#select system.costType}}
                    <option value="fixed">{{localize "age-system.fixed"}}</option>
                    <option value="variable">{{localize "age-system.variable"}}</option>
                {{/select}}
                </select>
            </li>

            {{!-- Stunt Type --}}
            <li>
                <label>{{localize "age-system.type"}} </label>
                <input type="text" name="system.type" value="{{system.type}}" placeholder="{{localize "age-system.type"}}" data-dtype="String"/>
            </li>

            {{!-- Page Ref --}}
            <li class="feature-controls" data-reference="{{system.reference}}">
                <label class="find-reference {{#if config.pdfoundryOn}}mouse-to-pointer{{/if}}">{{localize "age-system.reference"}}</label>
                <input type="text" name="system.reference" {{#if inChat}}disabled{{/if}} value="{{system.reference}}" placeholder="Page Ref." data-dtype="String"/>
            </li>
        </ul>
    </aside>

    <div class="second-column flexcol">
        <header class="top-banner colorset-first-tier flexrow">
            <div class="header-details">
                <input class="itemname" name="name" type="text" value="{{item.name}}" placeholder={{localize "age-system.name"}}/>
            </div>
        </header>
        
        <div class="sheet-main-content metal-background fill-space-height-100">
            <ul class="resource colorset-first-tier editor-parent">
                <li>
                    <label class="title">{{localize "age-system.item.desc"}}</label>
                </li>
                <li class="editor-parent">{{editor system.longDesc target="system.longDesc" button=true owner=owner editable=true engine="prosemirror"}}</li>
            </ul>
        </div>
    </div>
</form>